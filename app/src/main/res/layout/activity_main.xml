<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/customBanner"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="10dp"
                android:layout_gravity="center|start"
                android:scaleType="fitCenter"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="50dp"
                android:padding="10dp"
                android:orientation="vertical" >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/customTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/colorAccent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/customDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/white" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/settingsMenu"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@null"
                android:tint="?android:attr/colorAccent"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_settings" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/unsupportedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="?android:attr/colorAccent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/helpImage"
            android:layout_width="50sp"
            android:layout_height="50dp"
            android:layout_marginBottom="85dp"
            android:layout_marginEnd="25dp"
            android:gravity="bottom"
            android:layout_gravity="bottom|end"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/copyrightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="18sp"
            android:padding="12dp"
            android:textColor="?android:attr/colorAccent"
            android:background="@color/black" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            ads:adSize="BANNER"
            android:background="@android:color/transparent"
            ads:adUnitId="ca-app-pub-7791710838910455/5158225354" >
        </com.google.android.gms.ads.AdView>
    </FrameLayout>

    <include layout="@layout/rv_foreground_view" />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/viewPager" />
</RelativeLayout>